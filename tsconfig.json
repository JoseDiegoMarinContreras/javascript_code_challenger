{
  "compilerOptions": {
    "target": "es2020",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "paths": {
      "src/*": ["./src/*"],
      "utils/*": ["./src/utils/*"],
      "types/*": ["./src/types/*"]
    }
  }
}
